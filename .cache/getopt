
declare -A _o

options=$(getopt \
  --name "[ERROR]:ssrt" \
  --options "h,v" \
  --longoptions "help,version"  -- "$@"
) || exit 98

eval set -- "$options"
unset -v options

while true; do
  case "$1" in
    --help    | -h ) __print_help && exit ;;
    --version | -v ) __print_version && exit ;;
    -- ) shift ; break ;;
    *  ) break ;;
  esac
  shift
done

((BASHBUD_VERBOSE)) && _o[verbose]=1 #bashbud

